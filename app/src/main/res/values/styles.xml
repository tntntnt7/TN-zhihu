<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--日间主题-->
    <style name="TN_Theme_DAY" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/TN_colorPrimary</item>
        <item name="colorPrimaryDark">@color/TN_colorPrimaryDark</item>
        <item name="colorAccent">@color/TN_colorAccent</item>

        <item name="clockBackground">@android:color/transparent</item>
        <item name="clockTextColor">@android:color/black</item>
        <item name="clockTextColor_item_1">@color/item_1_text_color</item>
        <item name="cardViewBackgroundColor">@android:color/white</item>

        <item name="android:windowAnimationStyle">@style/Animation</item>
    </style>
    <!--夜间主题-->
    <style name="TN_Theme_NIGHT" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/TN_colorPrimary_n</item>
        <item name="colorPrimaryDark">@color/TN_colorPrimaryDark_n</item>
        <item name="colorAccent">@color/TN_colorPrimary_n</item>

        <item name="clockBackground">@color/clockBackground_night</item>
        <item name="clockTextColor">@android:color/white</item>
        <item name="clockTextColor_item_1">@android:color/white</item>
        <item name="cardViewBackgroundColor">@color/TN_colorAccent_n</item>

        <item name="android:windowAnimationStyle">@style/Animation</item>
    </style>

    <!--取消activity过渡动画-->
    <style name="Animation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>


